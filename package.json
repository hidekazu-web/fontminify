{
  "name": "fontminify",
  "version": "1.2.0",
  "description": "macOSデスクトップアプリケーション - 日本語フォントの軽量化ツール",
  "main": "dist/main/main.js",
  "author": {
    "name": "FontMinify Developer",
    "email": "developer@fontminify.com"
  },
  "homepage": "https://github.com/fontminify/fontminify",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --port 5175",
    "dev:electron": "npm run build:main && wait-on http://localhost:5175 && cross-env NODE_ENV=development npx electron .",
    "dev:electron-only": "npm run build:main && cross-env NODE_ENV=development npx electron .",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "dist:mac:x64": "npm run build && electron-builder --mac --x64",
    "dist:win": "npm run build && electron-builder --win",
    "dist:unsigned": "npm run build && npx electron-builder --mac --publish=never --config.mac.identity=null",
    "dmg": "./scripts/build-dmg.sh",
    "dmg:clean": "./scripts/build-dmg-clean.sh",
    "dmg:simple": "./scripts/build-dmg-simple.sh",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "clsx": "^2.0.0",
    "fontkit": "^2.0.4",
    "joyo-kanji": "^0.2.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "subset-font": "^2.4.0",
    "ts-node": "^10.9.2",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/forms": "^0.5.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.6",
    "electron-builder": "^24.0.0",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^17.6.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "puppeteer": "^24.16.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.1",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.fontminify.app",
    "productName": "FontMinify",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*",
      "dist/shared/**/*",
      "package.json",
      "!node_modules/@types/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/test/**/*"
    ],
    "asarUnpack": [
      "node_modules/fontkit/**/*",
      "node_modules/subset-font/**/*"
    ],
    "extraResources": [
      {
        "from": "build/",
        "to": "build/",
        "filter": [
          "*.plist",
          "*.svg",
          "*.html"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "FontMinify Installer",
      "background": "build/dmg-background.svg",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
